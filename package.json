{
  "name": "epfl-nios-ii",
  "displayName": "EPFL Nios II",
  "description": "Language Support for the Nios II Assembly Language Programming taught at EPFL",
  "publisher": "TiberiuMusat",
  "version": "0.0.17",
  "repository": {
    "url": "https://github.com/Tiberiu02/epfl-nios-ii-vscode"
  },
	"icon": "favicon.jpg",
  "engines": {
    "vscode": "^1.36.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:niosii"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.36.0",
    "typescript": "^4.0.2"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "niosii",
        "aliases": [
          "EPFL Nios II",
          "niosii",
          "niosiiasm",
          "niosii asm"
        ],
        "extensions": [
          ".asm",
          ".s",
          ".niosii",
          ".eds",
          ".elf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "niosii",
        "path": "./snippets/niosiiasm.json"
      },
      {
        "language": "niosii",
        "path": "./snippets/niosiisudo.json"
      }
    ],
    "grammars": [
      {
        "language": "niosii",
        "scopeName": "source.s",
        "path": "./syntaxes/niosii.assembly.tmLanguage.json"
      }
    ],
		"themes": [
			{
				"label": "Dark Age",
				"uiTheme": "vs-dark",
				"path": "./themes/dark-age-color-theme.json"
			}
		]
  }
}
